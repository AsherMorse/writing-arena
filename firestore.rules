rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper to check if user is a player in the session
    function isPlayerInSession() {
      return request.auth.uid in resource.data.players;
    }
    
    // ============================================================================
    // WRITING ARENA COLLECTIONS
    // ============================================================================
    
    // User Profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update: if isOwner(userId);
      allow delete: if false;
      
      // Grading History (subcollection for TWR grader results)
      match /gradingHistory/{gradingId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if false;
      }
    }
    
    // Matchmaking Queue
    match /matchmakingQueue/{userId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isOwner(userId);
    }
    
    // Match Lobbies
    match /matchLobbies/{matchId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }
    
    // Matches
    match /matches/{matchId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if false;
    }
    
    // Match States
    match /matchStates/{matchId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if false;
    }
    
    // Game Sessions (ranked, quick-match, practice)
    match /sessions/{sessionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && isPlayerInSession();
      allow delete: if false;
    }
    
    // Writing Sessions (saved results)
    match /writingSessions/{sessionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
    
    // Improve Mode Conversations
    match /improveConversations/{conversationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if false;
    }
    
    // AI Students (for ranked matches)
    match /aiStudents/{studentId} {
      allow read: if isAuthenticated();
      allow write: if false; // Backend/API only
    }
    
    // Noble Name Claiming (unique medieval names)
    match /takenNames/{nameHash} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() 
        && (resource.data.reservedBy == request.auth.uid 
            || resource.data.expiresAt < request.time);
      allow delete: if isAuthenticated() 
        && resource.data.reservedBy == request.auth.uid;
    }
  }
}